            function validateGPS(input) {
                   const errorElement = document.getElementById("error");
                   const value = input.value.trim();

                   // Split by comma
                   const parts = value.split(",");
                   if (parts.length !== 2) {
                       errorElement.textContent = "Invalid format. Use 'latitude, longitude'.";
                       input.setCustomValidity("Invalid format. Use 'latitude, longitude'.");
                       return;
                   }

                   // Trim spaces
                   let lat = parts[0].trim();
                   let lon = parts[1].trim();

                   // Convert to numbers
                   lat = parseFloat(lat);
                   lon = parseFloat(lon);

                   // Check if both are valid numbers
                   if (isNaN(lat) || isNaN(lon)) {
                       errorElement.textContent = "Latitude and longitude must be valid numbers.";
                       input.setCustomValidity("Latitude and longitude must be valid numbers.");
                       return;
                   }

                   // Check valid range
                   if (lat < -90 || lat > 90 || lon < -180 || lon > 180) {
                       errorElement.textContent = "Latitude must be between -90 and 90, and longitude between -180 and 180.";
                       input.setCustomValidity("Latitude must be between -90 and 90, and longitude between -180 and 180.");
                       return;
                   }

                   // If valid, clear errors
                   errorElement.textContent = "";
                   input.setCustomValidity("");  // Reset custom validity
               }


            // Validate on form submit
              document.getElementById("SiteForm").addEventListener("submit", function(event) {
                  const gpsInput = document.getElementById("GpsLocation");
                  validateGPS(gpsInput);  // Validate on form submit
                  if (!gpsInput.checkValidity()) {
                      event.preventDefault(); // Prevent form submission if invalid
                  }
              });


