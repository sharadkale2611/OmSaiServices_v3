@using Microsoft.AspNetCore.Identity
@model IdentityRole

<h1>Edit Role</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">
                    Edit Role
                </h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Master</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Role" asp-action="Index">Roles</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Edit
                    </li>
                </ol>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->


<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <partial name="~/Views/shared/_alertpartial.cshtml" />
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class=" mb-4">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Edit" asp-controller="Role" asp-area="Admin" method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group mb-3">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="Role" asp-action="Index"> Cancel</a>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>