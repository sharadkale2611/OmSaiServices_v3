@model OmSaiModels.Admin.CreateUserViewModel

<h2>Add Staff</h2>

<form method="post">
<div class="row">
    @Html.AntiForgeryToken()

    <div class="form-group col-md-6">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Password" class="control-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label>Roles</label>
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <!-- Dynamically generate checkboxes for each role -->
                <input class="form-check-input"
                       type="checkbox"
                       name="SelectedRoles"
                       value="@role"
                       id="role-@role"
                        />
                <label class="form-check-label" for="role-@role">@role</label>
            </div>
        }
    </div>

</div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-danger" asp-area="admin" asp-controller="User" asp-action="Index">Cancel</a>

</form>
