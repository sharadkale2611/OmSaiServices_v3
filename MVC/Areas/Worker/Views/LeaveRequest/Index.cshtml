                </div>
            </div>


            <div class="col-lg-4 col-md-4 col-sm-12" id="rightCardApprove" style="display:none;">
                <div class="card card-warning card-outline mb-4 ">
                    <div class="card-header">
                        <h4>Approve Leave Request</h4>
                    </div>
                    <span asp-validation-summary="All" class="text-danger"></span>
                    <form id="LeaveRequestFormApprove" method="post" asp-area="Worker" asp-controller="LeaveRequest" asp-action="Approve"  >
                        <input type="hidden" name="LeaveRequestId" id="LeaveRequestId2" />
                        <div class="card-body" style="padding-top:5px;">
                            <div class="mb-1">

                                <label class="col-form-label">Worker Name: <b id="lblWorkerName"></b></label>

                            </div>
                            <div class="mb-3">
                                <label asp-for="Remark" class="col-form-label">Remark</label>
                                <textarea class="form-control" name="Remark" id="Remark" placeholder="Remark" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Status" class="col-form-label">Status</label>
                                <select class="form-control" name="Status" id="Status" required>
                                    <option value="">Select Status</option>
                                    @foreach (var status in StatusList)
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="card-footer text-center">
                            <button type="submit" class="btn btn-outline-secondary" id="btnSubmit">Save Changes</button>
                            <button type="button" class="btn btn-outline-warning" id="btnCloseForm1">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>



        </div>
    </div>
</div>


@section modals {
    <partial name="~/Views/shared/_DeleteModelPartial.cshtml" />
}

@section Scripts {
    <script>
        $('#btnShowForm').click(() => {
            $('#leftCard').removeClass("col-lg-12 col-md-12").addClass("col-lg-8 col-md-8");
            $('#rightCard').fadeIn();
            $('#btnShowForm').fadeOut();
            $('#btnSubmit').text("Save");

            $('#LeaveRequestForm').attr('action', '/worker/LeaveRequest/Create');
            $('#LeaveRequestId').val("");
        });

        $('#btnCloseForm').click(() => {
            $('#leftCard').addClass("col-lg-12 col-md-12").removeClass("col-lg-8 col-md-8");
            $('#rightCard').fadeOut();
            $('#btnShowForm').fadeIn();
        });

        $('.btnEdit').click(function () {
            $('#leftCard').removeClass("col-lg-12 col-md-12").addClass("col-lg-8 col-md-8");
            $('#rightCard').fadeIn();
            $('#btnShowForm').fadeOut();
            $('#btnSubmit').text("Update");

            let data = $(this).data();
            $('#LeaveRequestId').val(data.id);
            $('#WorkerId').val(data.workerid);
            $('#LeaveTypeId').val(data.leavetypeid);
            let startDate = new Date(data.startdate).toISOString().split('T')[0];
            let endDate = new Date(data.enddate).toISOString().split('T')[0];

            $('#StartDate').val(startDate);
            $('#EndDate').val(endDate);
            $('#Reason').val(data.reason);
            // Show worker name in the input and disable the WorkerId dropdown
            $('#WorkerId').prop('disabled', true); // Disable the dropdown for WorkerId in edit mode


            $('#LeaveRequestForm').attr('action', '/worker/LeaveRequest/Edit');
        });



        //Approve Button
        $('.btnApprove').click(function () {
            $('#leftCard').removeClass("col-lg-12 col-md-12").addClass("col-lg-8 col-md-8");
            $('#rightCardApprove').fadeIn();
            $('#LeaveRequestFormApprove').fadeIn();
            $('#btnSubmit').text("Approve");

            let data = $(this).data();
            // console.log(data);
            // alert(data.id);

            $('#lblWorkerName').html(data.worker_name);
            $('#LeaveRequestId2').val(data.id);
            $('#Remark').val(data.remark);
            $('#Status').val(data.status);

            $('#LeaveRequestFormApprove').attr('action', '/worker/LeaveRequest/Approve');
        });

        $('#btnCloseForm1').click(() => {
            $('#leftCard').addClass("col-lg-12 col-md-12").removeClass("col-lg-8 col-md-8");
            $('#rightCardApprove').fadeOut();
            $('#btnShowForm').fadeIn();
        });

        $('.btn-delete').click(function () {
            $('#leftCard').removeClass("col-lg-12 col-md-12").addClass("col-lg-8 col-md-8");
            $('#rightCard').fadeIn();
            $('#btnShowForm').fadeOut();
            $('#btnSubmit').text("Delete");

            let data = $(this).data();
            $('#LeaveRequestId').val(data.delete_id);
            $('#LeaveRequestForm').attr('action', '/worker/LeaveRequest/Delete');
        });
    </script>
}
