                                    @foreach (var worker in ViewBag.LeaveType)
                                    {
                                        <option value="@worker.LeaveTypeId">@worker.LeaveTypeName</option>
                                    }
                                </select>
                                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
